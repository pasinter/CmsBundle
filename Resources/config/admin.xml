<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pasinter.cms.admin.page" class="Pasinter\Bundle\CmsBundle\Admin\PageAdmin">
            <tag name="sonata.admin" manager_type="orm" group="CMS" label="Pages" label_translator_strategy="sonata.admin.label.strategy.native" />
            <argument />
            <argument>Pasinter\Bundle\CmsBundle\Entity\Page</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            
        </service>
        
        <service id="pasinter.cms.admin.block" class="Pasinter\Bundle\CmsBundle\Admin\BlockAdmin">
            <tag name="sonata.admin" manager_type="orm" group="CMS" label="Blocks" label_translator_strategy="sonata.admin.label.strategy.native" />
            <argument />
            <argument>Pasinter\Bundle\CmsBundle\Entity\Block</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            
        </service>
        
        <service id="pasinter.cms.admin.collection" class="Pasinter\Bundle\CmsBundle\Admin\CollectionAdmin">
            <tag name="sonata.admin" manager_type="orm" group="CMS" label="Collections" label_translator_strategy="sonata.admin.label.strategy.native" />
            <argument />
            <argument>Pasinter\Bundle\CmsBundle\Entity\Collection</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            
        </service>

    </services>

</container>